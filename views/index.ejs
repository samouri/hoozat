<!DOCTYPE html>

<html lang="en-us">

<head>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <script src='//ajax.googleapis.com/ajax/libs/jquery/1.2.6/jquery.min.js' type='text/javascript'> </script>
    <script src="http://code.jquery.com/color/jquery.color-2.1.2.js"></script>
</head>
<center>
<body>
    <div id="header-padding"></div>
    <div id="header"><h1> HOOZAT? </h1></div>
    <% if(typeof(user) != 'undefined') { %>
    <div id="content-box" class="rounded">
        <div id = "tweet-bar">
            <p> "<%= tweet.text %>"</p>
        </div>
        <div id = "container">
            <div class = "inner-container left">
                <% for (var i = 0; i < 3; i++) {%>
                <% if (i == 2) { %>
                <div class="profile last-profile rounded">
                <% } else { %>
                <div class="profile rounded">
                <% } %>
                    <div class="avi-left"><img class="picture rounded" src="<%=friends_data[i].photo %>"></div>
                    <div class="name-container left">
                        <p class="name left"><%= friends_data[i].name %> </p>
                        <p class="handle left">@<%= friends_data[i].screen_name %> </p>
                    </div>
                </div>
                <% } %>
            </div>
            <div class="inner-container right">
                <% for (var i = 3; i < 6; i++) {%>
                <% if (i == 5) { %>
                <div class="profile last-profile rounded">
                <% } else { %>
                <div class="profile rounded">
                <% } %>
                    <div class="avi-right"><img class="picture rounded"  src="<%=friends_data[i].photo %>"></div>
                    <div class="name-container right">
                        <p class="name right"><%= friends_data[i].name %> </p>
                        <p class="handle right">@<%= friends_data[i].screen_name %> </p>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        <div class="end"></div>
    </div>
    <% } else { %>
        <a href="auth/twitter"> login </a></a>
    <% } %>
</body>
</center>
<footer id = "footer">
        <script>
            <% if(typeof(asyncResults) != 'undefined') { %>
                var results = <%- JSON.stringify(asyncResults) %> 
                var tweeter = <%- JSON.stringify(tweeter) %>
                var friend_ids = <%- JSON.stringify(friend_ids) %>
                var rand_friend; var six_rand_friends = {};
                $('.profile').click(function() {
                    if( "@" + tweeter.screen_name.trim() === $(this).find(".handle")[0].innerText.trim()) {
                        $(this).css('background-color', 'rgba(0, 255, 36, 0.5)');
                    }
                    else {
                        $(this).css('background-color', 'rgba(233, 37, 37, 0.5)');
                    }

                    while (Object.keys(six_rand_friends).length < 6 && friend_ids.length >= Object.keys(six_rand_friends).length) {
                        rand_friend = friend_ids[Math.floor(Math.random() * friend_ids.length)];
                        six_rand_friends[rand_friend] = true;
                    }
                });
            <% } %> 
            
        </script> 

</footer>
</html>